<% layout('../partials/layout') -%>
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Data Master Tools</h3>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Tools List</h2>
                        <div class="clearfix"></div>
                    </div>
                    <a type="button" class="btn btn-dark" href="/MasterTools/Add">Add Tools</a>
                    <div class="x_content">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Detail</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% data.forEach(function(tool) { %>
                                <tr>
                                    <td><%= tool.IdTool %></td>
                                    <td><%= tool.tool_name %></td>
                                    <td><%= tool.tool_detail %></td>
                                    <td><%= tool.status %></td>
                                    <td>
                                        <a href="/MasterTools/View?id=<%= tool.IdTool %>" class="btn btn-primary btn-sm">View</a>
                                        <a href="/MasterTools/Edit?id=<%= tool.IdTool %>" class="btn btn-warning btn-sm">Edit</a>
                                        <a href="/MasterTools/Delete?id=<%= tool.IdTool %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this tool?')">Delete</a>
                                    </td>
                                </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- partial('../partials/footer') %>
