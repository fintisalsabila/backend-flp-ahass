<% layout('../partials/layout') -%>
<div class="right_col" role="main">
    <div class="">
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Master Order Tools</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <button type="button" class="btn btn-success" onclick="window.location.href='/MasterOrderTools/Add'">Add New Order Tool</button>
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>No.</th>
                                    <th>Tool Image</th>
                                    <th>Part Number</th>
                                    <th>Tool Name</th>
                                    <th>Price</th>
                                    <th>Stock</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% data.forEach(function(row, index) { %>
                                    <tr>
                                        <td><%= index + 1 %></td>
                                        <td><%= row.tool_image %></td>
                                        <td><%= row.tool_part_number %></td>
                                        <td><%= row.tool_name %></td>
                                        <td><%= row.price %></td>
                                        <td><%= row.stock %></td>
                                        <td>
                                            <a href="/MasterOrderTools/Edit?id=<%= row.IdOrderTool %>" class="btn btn-info btn-sm">Edit</a>
                                            <a href="/MasterOrderTools/View?id=<%= row.IdOrderTool %>" class="btn btn-primary btn-sm">View</a>
                                            <a href="/MasterOrderTools/Delete?id=<%= row.IdOrderTool %>" class="btn btn-danger btn-sm">Delete</a>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- partial('../partials/footer') %>