                                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="status_user" >Status User</label>
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            <select class="select2_single form-control" tabindex="-1" name="status_user" >
                                                <option value="T" <%= user.status_user=='T' ? 'selected' : '' %>>Active</option>
                                                <option value="F" <%= user.status_user=='F' ? 'selected' : '' %>>Non Active</option>
                                              </select>
                                        </div>
                                    </div>  -->

                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="status_user">Status User : 
                                          </label>
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            <label class="view-label col-md-7" for="first-name">
                                                        <!-- <%= user.status_user %> -->
                                                        <% if(user.status_user == "A"){ %>
                                                            <b>active</b>
                                                       <% } else { %>
                                                        <b>non active</b>
                                                       <% } %>
                                                </label>
                                        </div>
                                    </div>
                                    <div class="ln_solid"></div>
                                    <div class="form-group">
                                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                            <a type="submit" class="btn btn-primary" href="/MasterUser/Index">Back</a>
                                        </div>
                                    </div>

                                </form>
                                <% }) %>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- footer content -->
        <%- partial('../partials/footer') %>
            <!-- /footer content -->

    </div>

    <script>
        //Kondisi Penampilan Salesman name & Supervisor Name (New Condition By Lely)
        $(document).ready(function() {
            document.getElementById("divSupervisorName").style.display = "none";
            document.getElementById("divSalesmanName").style.display = "none";
            
            if (document.getElementById("id_group").value == "ea22e39e-0590-11e8-9702-ac220be6ac47") {
                document.getElementById("divSupervisorName").style.display = "block";
                document.getElementById("divSalesmanName").style.display = "block";
            } else if (document.getElementById("id_group").value == "ea16bbd9-0590-11e8-9702-ac220be6ac47") {
                document.getElementById("divSupervisorName").style.display = "block";
            }
        });
    </script>