<%- layout('../partials/layout') %>
<link rel="stylesheet" type="text/css" href="../css/pagination.css" />
<script src="https://code.jquery.com/jquery-1.12.4.min.js" integrity="sha384-nvAa0+6Qg9clwYCGGPpDQLVpLNn0fRaROjHqs13t4Ggj3Ez50XnGQqc/r8MhnRDZ" crossorigin="anonymous"></script>

<div class="right_col" role="main">
    <div class="">
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Master Training <small>add</small></h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <form action="/MasterTraining/AddSubmit" method="post" id="demo-form2" data-parsley-validate class="form-horizontal form-label-left" novalidate enctype="multipart/form-data">

                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="trainingName">Training Name</label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input type="text" id="trainingName" name="trainingName" required="required" class="form-control col-md-7 col-xs-12">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="participant">Participant</label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input type="number" id="participant" name="participant" required="required" class="form-control col-md-7 col-xs-12">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="trainingStartDate">Training Start Date</label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input type="date" id="trainingStartDate" name="trainingStartDate" required="required" class="form-control col-md-7 col-xs-12">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="trainingEndDate">Training End Date</label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input type="date" id="trainingEndDate" name="trainingEndDate" required="required" class="form-control col-md-7 col-xs-12">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="modul">Module</label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input type="text" id="modul" name="modul" class="form-control col-md-7 col-xs-12">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="namaModul">Nama Modul</label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input type="text" id="namaModul" name="namaModul" required="required" class="form-control col-md-7 col-xs-12">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="fileUpload">Upload File</label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input type="file" id="fileUpload" name="fileUpload" required="required" class="form-control col-md-7 col-xs-12">
                                </div>
                            </div>

                            <div class="ln_solid"></div>
                            <div class="form-group">
                                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                    <button type="submit" class="btn btn-success">Submit</button>
                                    <button type="reset" class="btn btn-primary">Reset</button>
                                    <a href="/MasterTraining/Index" class="btn btn-default">Cancel</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('../partials/footer') %>
</div>

<script src="../js/pagination.js"></script>
